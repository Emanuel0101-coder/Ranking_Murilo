{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "rewrites": [
    { "source": "/purchase", "destination": "/api/purchase" },
    { "source": "/ranking", "destination": "/api/ranking" },
    { "source": "/remove", "destination": "/api/remove" }
  ]
}
